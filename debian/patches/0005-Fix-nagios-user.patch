diff --git a/etc/schedulerd.ini b/etc/schedulerd.ini
index fd1c94f..8c4b388 100644
--- a/etc/schedulerd.ini
+++ b/etc/schedulerd.ini
@@ -20,3 +20,5 @@ hard_ssl_name_check=0
